#!/usr/bin/env bash
# Build libnumFlux
set -euo pipefail
NPROCS="${NPROCS:-}"
while getopts ":j:" opt; do
  case $opt in
    j) NPROCS="$OPTARG" ;;
  esac
done
if [[ -z "${NPROCS}" ]]; then
  if command -v nproc >/dev/null 2>&1; then NPROCS="$(nproc)"; else NPROCS=4; fi
fi
echo "[numFlux] wmake libso -j${NPROCS}"
wmake -j "${NPROCS}" libso
